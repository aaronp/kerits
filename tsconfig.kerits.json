{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": []
  },
  "include": [
    "src/*.ts",
    "src/schemas/**/*.ts",
    "src/storage/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/storage/adapters/indexeddb.ts",
    "node_modules"
  ]
}
